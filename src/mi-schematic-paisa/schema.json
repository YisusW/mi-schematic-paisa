{
  "$schema": "http://json-schema.org/schema",
  "id": "mi-schematic-paisa",
  "title": "Validación del schematic que crea un fichero Medellin.txt en la raiz del proyecto",
  "type": "object",
  "properties": {
    "path": {
      "description": "El nombre de archivo que equivale a su ruta",
      "type": "string",
      "default": "medellin",
      "enum": [
        "medellin",
        "bogota",
        "cartagena",
        "cali",
        "barranquilla"
      ],
      "x-prompt": {
        "message": "¿De qué ciudad es la bandeja paisa?",
        "type": "list",
        "items": [
          {"value": "medellin", "label": "Medellín"},
          {"value": "bogota", "label": "Bogotá"},
          {"value": "cartagena", "label": "Cartagena"},
          {"value": "cali", "label": "Cali"},
          {"value": "barranquilla", "label": "Barranquilla"}
        ]
      }
    },
    "showMessage": {
      "description": "Una booleana aleatoria para demostrar su uso. Se mostratá un mensaje en consola si el valor es true. No es obligatoria",
      "type": "boolean",
      "default": false,
      "x-prompt": "¿Imprimir mensaje en consola?"
    }
  },
  "required": ["path"]
}